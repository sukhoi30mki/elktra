<div id="wrapper">
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            {{#if success_msg}}
            {{message}}
            <div class="alert alert-info" style="margin: 0px 15px 10px" role="alert">{{success_msg}}</div>
            {{/if}}
            {{#if error_msg}}
            <div class="alert alert-danger" style="margin: 0px 15px 0px" role="alert">{{error_msg}}</div>
            {{/if}}
            {{#if errors}}{{#each errors}}
            <div class="alert alert-danger" style="margin: 0px 15px 0px" role="alert">{{msg}}</div>
            {{/each}} {{/if}}
            <br>
            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="d-sm-flex align-items-center justify-content-between mb-4">
                    <h1 class="h3 mb-0 text-gray-800">Create an user</h1>
                </div>
                <hr>
                <div class="row">
                    <div class="col-12">
                        <form action="/users/create" method="post">
                            <div class="form-group">
                                <label for="">1. Username</label>
                                <input type="text" name="username" class="form-control" placeholder="Enter username">
                            </div>
                            <hr>
                            <div class="form-group">
                                <label for="">2. Email address</label>
                                <input type="email" class="form-control" name="email" placeholder="Enter email address"
                                    required>
                            </div>
                            <hr>
                            <div class="form-group">
                                <label for="">3. Mobile number</label>
                                <input type="number" name="mobile" class="form-control"
                                    placeholder="Enter mobile number" maxlength="11">
                            </div>

                            <hr>
                            <div class="form-group">
                                <button class="btn btn-success" type="submit">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>